<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_minimalist"
    tools:context=".PersonalDetails3Activity">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="Back Button"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Name!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell us more about you.."
        android:textSize="14sp"
        android:textColor="#757575"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Form Container -->
    <LinearLayout
        android:id="@+id/formContainer"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/subtitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <!-- Email Address -->
        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your email"
            android:background="@drawable/underline_edittext_background"
            android:padding="8dp"
            android:textSize="16sp"
            android:inputType="textEmailAddress" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/phoneLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/phoneInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your phone number"
            android:background="@drawable/underline_edittext_background"
            android:padding="8dp"
            android:textSize="16sp"
            android:inputType="phone" />

        <!-- Address -->
        <TextView
            android:id="@+id/addressLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your address"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/addressInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your address"
            android:background="@drawable/underline_edittext_background"
            android:padding="8dp"
            android:textSize="16sp"
            android:inputType="textPostalAddress" />

        <!-- Social Media Section -->
        <TextView
            android:id="@+id/socialMediaLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Social Media Links"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Facebook -->
        <EditText
            android:id="@+id/facebookInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Facebook"
            android:background="@drawable/underline_edittext_background"
            android:padding="8dp"
            android:textSize="16sp"
            android:inputType="textUri" />

        <!-- Instagram -->
        <EditText
            android:id="@+id/instagramInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Instagram"
            android:background="@drawable/underline_edittext_background"
            android:padding="8dp"
            android:textSize="16sp"
            android:inputType="textUri"
            android:layout_marginTop="8dp" />

        <!-- Twitter -->
        <EditText
            android:id="@+id/twitterInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Twitter"
            android:background="@drawable/underline_edittext_background"
            android:padding="8dp"
            android:textSize="16sp"
            android:inputType="textUri"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Continue Button -->
    <Button
        android:id="@+id/continueButton"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_button_background"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/formContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
