<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Layer -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Bottom Line Layer -->
    <item android:top="48dp"> <!-- Adjust this value based on the height of your EditText -->
        <shape>
            <solid android:color="@color/dark_gray" />
            <size android:height="2dp" /> <!-- Line thickness -->
        </shape>
    </item>
</layer-list>
